<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="AgroserviciosTienda.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cvt="clr-namespace:AgroserviciosTienda.Utiles.Convertidores"
    xmlns:local="clr-namespace:AgroserviciosTienda">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/icofont.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <cvt:ProductosVentaTotalConverter x:Key="ProductosVentaTotal" />
            <cvt:BoolToColorConverter x:Key="BoolToColor" />
            <cvt:PresentacionToStringConverter x:Key="PresentacionToString" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
