<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AgroserviciosTienda.Vistas.PgInicio"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AgroserviciosTienda.VistaModelos"
    Title="Inicio"
    x:DataType="vm:PgInicioVistaModelo">

    <Grid RowDefinitions="*,auto">
        <ScrollView Grid.Row="0" Padding="16">
            <VerticalStackLayout
                HorizontalOptions="Center"
                Spacing="24"
                VerticalOptions="Center">
                <Frame>
                    <VerticalStackLayout>
                        <Label
                            FontSize="Title"
                            LineBreakMode="NoWrap"
                            Text="Entrada de Productos" />
                        <Label Text="Tipos de productos: 0" />
                        <HorizontalStackLayout
                            Padding="8,8,8,0"
                            HorizontalOptions="EndAndExpand"
                            Spacing="8">
                            <Button Command="{Binding AgregarEntradaCommand}" Text="Agregar" />
                            <Button Command="{Binding VerEntradasCommand}" Text="Ver" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>
                <Frame>
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="Title"
                            LineBreakMode="NoWrap"
                            Text="Venta de Productos" />
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Ventas de hoy: 0" />
                                    <Span Text=" | " />
                                    <Span Text="Facturación: 0" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Ventas en la semana: 0" />
                                    <Span Text=" | " />
                                    <Span Text="Facturación: 0" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Ventas en el mes: 0" />
                                    <Span Text=" | " />
                                    <Span Text="Facturación: 0" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <HorizontalStackLayout
                            Padding="8,8,8,0"
                            HorizontalOptions="Fill"
                            Spacing="8">
                            <Button Command="{Binding}" Text="Ver resumen" />
                            <Button Command="{Binding VerVentasCommand}" Text="Ver" />
                            <Button Command="{Binding AgregarVentaCommand}" Text="Agregar" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <Grid
            Grid.Row="1"
            Padding="16"
            BackgroundColor="{StaticResource Primary}">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                <Label
                    FontSize="Micro"
                    Text="by RandA Media Lab, Group"
                    TextColor="{StaticResource White}" />
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>