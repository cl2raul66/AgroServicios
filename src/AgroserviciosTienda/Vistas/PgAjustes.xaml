<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AgroserviciosTienda.Vistas.PgAjustes"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AgroserviciosTienda.VistaModelos"
    xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Ajustes"
    x:DataType="vm:PgAjustesVistaModelo">

    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />
        <Picker ItemsSource="{Binding Medidas, Mode=OneWay}" SelectedItem="{Binding SelectedMedida}" />
        <Label
            HorizontalOptions="Center"
            Text="{Binding Unidades, Mode=OneWay, TargetNullValue=NONE, StringFormat='Unidades: {0}', Converter={tk:ListToStringConverter Separator=','}}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>