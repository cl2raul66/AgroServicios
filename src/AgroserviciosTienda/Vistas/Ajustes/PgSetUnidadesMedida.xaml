<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AgroserviciosTienda.Vistas.Ajustes.PgSetUnidadesMedida"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:modelo="clr-namespace:AgroserviciosTienda.Modelos"
    xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:AgroserviciosTienda.VistaModelos.Ajustes"
    Title="Ajustes - Unidades de medidas"
    x:DataType="vm:PgSetUnidadesMedidaVistaModelo">
    <ContentPage.Resources>
        <ResourceDictionary>
            <tk:ListToStringConverter x:Key="ListToString" Separator=", " />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <ListView Margin="16" ItemsSource="{Binding Medidas, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="modelo:MedidaView">
                    <TextCell Detail="{Binding Unidades, Converter={StaticResource ListToString}}" Text="{Binding Nombre}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>
</ContentPage>