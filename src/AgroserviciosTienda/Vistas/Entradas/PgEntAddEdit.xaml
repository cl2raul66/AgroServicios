<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AgroserviciosTienda.Vistas.Entradas.PgEntAddEdit"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:AgroserviciosTienda.VistaModelos.Entradas"
    Title="EntAddEdit"
    x:DataType="vm:PgEntAddEditVistaModelo">

    <ScrollView Padding="16">
        <Frame HorizontalOptions="Center" VerticalOptions="Center">
            <VerticalStackLayout Spacing="16" WidthRequest="400">
                <Label
                    FontAttributes="Bold"
                    FontSize="Subtitle"
                    Text="{Binding Titulo, Mode=OneWay}" />
                <Grid RowDefinitions="auto,auto" RowSpacing="8">
                    <Label Grid.Row="0" Text="Fecha:" />
                    <DatePicker Grid.Row="1" Date="{Binding Fecha}" />
                </Grid>
                <Grid RowDefinitions="auto,auto" RowSpacing="8">
                    <Label Grid.Row="0" Text="Producto:" />
                    <Entry
                        Grid.Row="1"
                        Placeholder="Escriba aquÃ­"
                        Text="{Binding ProductoNombre}" />
                </Grid>
                <Grid
                    ColumnDefinitions="*,auto"
                    ColumnSpacing="8"
                    RowDefinitions="auto,auto"
                    RowSpacing="8">
                    <Label Grid.Row="0" Text="Cantidad:" />
                    <Entry
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="{Binding Cantidad}" />
                    <Stepper
                        x:Name="StpCantidad"
                        Grid.Row="1"
                        Grid.Column="1"
                        Increment="1"
                        Maximum="1000"
                        Minimum="0"
                        Value="{Binding Cantidad}" />
                </Grid>
                <Grid
                    ColumnDefinitions="*,auto"
                    ColumnSpacing="8"
                    RowDefinitions="auto,auto"
                    RowSpacing="8">
                    <Label Grid.Row="0" Text="Precio:" />
                    <Entry
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="{Binding Precio, StringFormat='{0:F2}'}" />
                    <Stepper
                        Grid.Row="1"
                        Grid.Column="1"
                        Increment="10.00"
                        Maximum="19999.99"
                        Minimum="0.00"
                        Value="{Binding Precio}" />
                </Grid>
                <Label FontSize="Subtitle" Text="Opcionales:" />
                <Grid RowDefinitions="auto,auto" RowSpacing="8">
                    <Label Grid.Row="0" Text="No. Factura:" />
                    <Entry
                        Grid.Row="1"
                        Placeholder="Esciba aqui"
                        Text="{Binding NoFactura}" />
                </Grid>
                <Grid RowDefinitions="auto,auto" RowSpacing="8">
                    <Label Grid.Row="0" Text="Proveedor:" />
                    <Entry
                        Grid.Row="1"
                        Placeholder="Esciba aqui"
                        Text="{Binding Proveedor}" />
                </Grid>
                <Grid
                    ColumnDefinitions="*,auto"
                    ColumnSpacing="8"
                    RowDefinitions="auto,auto"
                    RowSpacing="8">
                    <Label Grid.Row="0" Text="Costo de flete:" />
                    <Entry
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="{Binding CostoFlete, StringFormat='{0:F2}'}" />
                    <Stepper
                        Grid.Row="1"
                        Grid.Column="1"
                        Increment="0.5"
                        Maximum="4999.99"
                        Minimum="0.00"
                        Value="{Binding CostoFlete}" />
                </Grid>
                <Grid
                    ColumnDefinitions="*,auto"
                    ColumnSpacing="8"
                    RowDefinitions="auto,auto"
                    RowSpacing="8">
                    <Label Grid.Row="0" Text="Costo de carga:" />
                    <Entry
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="{Binding CostoCarga, StringFormat='{0:F2}'}" />
                    <Stepper
                        Grid.Row="1"
                        Grid.Column="1"
                        Increment="0.5"
                        Maximum="4999.99"
                        Minimum="0.00"
                        Value="{Binding CostoCarga}" />
                </Grid>
                <Grid ColumnDefinitions="*,auto,auto" ColumnSpacing="8">
                    <Label
                        Grid.Column="0"
                        FontSize="Micro"
                        IsVisible="{Binding VisibleError, Mode=OneWay}"
                        TextColor="Red"
                        VerticalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontFamily="MaterialDesignIcons" Text="{StaticResource IconAlert}" />
                                <Span Text=" Datos incorrectos." />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Button
                        Grid.Column="1"
                        Command="{Binding CancelarCommand}"
                        Text="Cancelar" />
                    <Button
                        Grid.Column="2"
                        Command="{Binding GuardarCommand}"
                        IsEnabled="False"
                        Text="Guardar" />
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </ScrollView>

</ContentPage>