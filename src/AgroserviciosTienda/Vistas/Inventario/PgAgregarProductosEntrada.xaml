<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AgroserviciosTienda.Vistas.PgAgregarProductosEntrada"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:AgroserviciosTienda.VistaModelos"
    Title="Agregar - Productos"
    x:DataType="vm:PgAgregarProductosEntradaVistaModelo"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="ModalAnimated">

    <Grid
        Padding="16"
        RowDefinitions="auto,*,auto"
        RowSpacing="16">
        <Frame
            Padding="8,4"
            CornerRadius="8"
            HorizontalOptions="Fill">
            <Grid ColumnDefinitions="*,auto">
                <Label
                    Padding="8"
                    FontSize="Subtitle"
                    Text="Agregar - Productos"
                    TextColor="{StaticResource Primary}"
                    VerticalOptions="Center" />
                <Grid Grid.Column="1" IsVisible="{Binding CountAdd, Converter={StaticResource IntToBool}}">
                    <Ellipse
                        Fill="{StaticResource Background}"
                        HeightRequest="28"
                        Stroke="{StaticResource Primary}"
                        StrokeThickness="2"
                        WidthRequest="28" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Micro"
                        HorizontalOptions="Center"
                        Text="{Binding CountAdd, Mode=OneWay}"
                        TextColor="{StaticResource Secondary}"
                        VerticalOptions="Center" />
                </Grid>
            </Grid>
        </Frame>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="16">
                <Frame>
                    <VerticalStackLayout Spacing="16">
                        <Grid RowDefinitions="auto,auto" RowSpacing="8">
                            <Label
                                Grid.Row="0"
                                FontSize="Subtitle"
                                Text="Nombre: *"
                                TextColor="{StaticResource Primary}"
                                VerticalOptions="Center" />
                            <Entry
                                Grid.Row="1"
                                ClearButtonVisibility="WhileEditing"
                                Keyboard="Text"
                                Placeholder="Escriba aquí"
                                Text="{Binding Nombre}" />
                        </Grid>
                        <Grid
                            ColumnSpacing="8"
                            RowDefinitions="auto,auto"
                            RowSpacing="8">
                            <Label
                                Grid.Row="0"
                                FontSize="Subtitle"
                                Text="Precio por unidad: *"
                                TextColor="{StaticResource Primary}" />
                            <Entry
                                Grid.Row="1"
                                Keyboard="Numeric"
                                Placeholder="0.00"
                                SelectionLength="1"
                                Text="{Binding Precio}" />
                        </Grid>
                        <Grid
                            ColumnSpacing="8"
                            RowDefinitions="auto,auto"
                            RowSpacing="8">
                            <Label
                                Grid.Row="0"
                                FontSize="Subtitle"
                                Text="Cantidad unitaria: *"
                                TextColor="{StaticResource Primary}" />
                            <Entry
                                Grid.Row="1"
                                Keyboard="Numeric"
                                Placeholder="0"
                                SelectionLength="1"
                                Text="{Binding Cantidadunidad}" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
                <Frame>
                    <VerticalStackLayout Spacing="16">
                        <Grid
                            ColumnSpacing="8"
                            RowDefinitions="auto,auto"
                            RowSpacing="8">
                            <Label
                                Grid.Row="0"
                                FontSize="Subtitle"
                                Text="Presentación:"
                                TextColor="{StaticResource Primary}" />
                            <Picker
                                Title="Seleccione presentación"
                                Grid.Row="1"
                                ItemsSource="{Binding Magnitudes, Mode=OneWay}"
                                SelectedItem="{Binding SelectedMagnitud}" />
                        </Grid>
                        <Grid
                            ColumnSpacing="8"
                            RowDefinitions="auto,auto"
                            RowSpacing="8">
                            <Label
                                Grid.Row="0"
                                FontSize="Subtitle"
                                Text="Presentación - Medida base:"
                                TextColor="{StaticResource Primary}" />
                            <Picker
                                Title="Seleccione tipo de medida"
                                Grid.Row="1"
                                ItemsSource="{Binding Unidades, Mode=OneWay}"
                                SelectedItem="{Binding PresentacionUnidad}" />
                        </Grid>
                        <Grid
                            ColumnSpacing="8"
                            RowDefinitions="auto,auto"
                            RowSpacing="8">
                            <Label
                                Grid.Row="0"
                                FontSize="Subtitle"
                                Text="Presentación - cantidad"
                                TextColor="{StaticResource Primary}" />
                            <Entry
                                Grid.Row="1"
                                Keyboard="Numeric"
                                Placeholder="0"
                                SelectionLength="1"
                                Text="{Binding PresentacionValor}" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
                <Frame BackgroundColor="#ffa927" IsVisible="{Binding VisibleError, Mode=OneWay}">
                    <Label
                        CharacterSpacing="2"
                        FontSize="Body"
                        TextColor="Red">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontFamily="icofont" Text="{StaticResource InfoCircle}" />
                                <Span Text=" Rellene los requeridos (*)." />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        <Frame
            Grid.Row="2"
            Padding="8"
            CornerRadius="8"
            HorizontalOptions="Fill">
            <Grid ColumnDefinitions="*,auto,*,auto,*">
                <Button
                    Grid.Column="0"
                    Command="{Binding CancelarCommand}"
                    Text="Cancelar" />
                <Label
                    Grid.Column="1"
                    Margin="8,0"
                    FontFamily="icofont"
                    FontSize="Title"
                    Text="|"
                    TextColor="{StaticResource Gray400}"
                    VerticalOptions="Center" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AgregarCommand}"
                    Text="Agregar" />
                <Label
                    Grid.Column="3"
                    Margin="8,0"
                    FontFamily="icofont"
                    FontSize="Title"
                    Text="|"
                    TextColor="{StaticResource Gray400}"
                    VerticalOptions="Center" />
                <Button
                    Grid.Column="4"
                    Command="{Binding AgregarSalirCommand}"
                    LineBreakMode="MiddleTruncation"
                    Text="Agregar y salir" />
            </Grid>
        </Frame>
    </Grid>

</ContentPage>