<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AgroserviciosTienda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:AgroserviciosTienda.Vistas"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate v:PgInicio}"
            Route="PgInicio" />
        <ShellContent
            x:Name="PgVenta"
            Title="Venta"
            ContentTemplate="{DataTemplate v:PgVenta}"
            Route="PgVenta" />
        <Tab Title="Productos">
            <ShellContent
                x:Name="PgInventario"
                Title="Inventario"
                ContentTemplate="{DataTemplate v:PgInventario}"
                Route="PgInventario" />
            <ShellContent
                x:Name="PgEntrada"
                Title="Entradas"
                ContentTemplate="{DataTemplate v:PgEntrada}"
                Route="PgEntrada" />
        </Tab>
        <ShellContent
            x:Name="PgAjustes"
            Title="Ajustes"
            ContentTemplate="{DataTemplate v:PgAjustes}"
            Route="PgAjustes" />
    </TabBar>

</Shell>
