<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AgroserviciosTienda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:AgroserviciosTienda.Vistas"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Inicio">
            <ShellContent ContentTemplate="{DataTemplate v:PgInicio}" Route="PgInicio" />
        </Tab>
        <Tab Title="Venta">
            <ShellContent
                x:Name="PgVenta"
                ContentTemplate="{DataTemplate v:PgVenta}"
                Route="PgVenta" />
        </Tab>
        <Tab Title="Productos">
            <ShellContent
                x:Name="PgInventario"
                Title="Inventario"
                ContentTemplate="{DataTemplate v:PgInventario}"
                Route="PgInventario" />
            <ShellContent
                x:Name="PgEntrada"
                Title="Entradas"
                ContentTemplate="{DataTemplate v:PgEntrada}"
                Route="PgEntrada" />
        </Tab>
    </TabBar>

</Shell>
